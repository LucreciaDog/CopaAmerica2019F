<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:layout_marginTop="10dp"
    android:id="@+id/play_item_id">

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@mipmap/ic_launcher_round"
        android:id="@+id/img_bandera_1"/>
   <LinearLayout
       android:orientation="vertical"
       android:layout_width="175dp"
       android:layout_height="110dp">
       <TextView
           android:textSize="40dp"
           android:textAlignment="center"
           android:layout_width="175dp"
           android:layout_height="50dp"
           android:text="0 : 0"
           android:id="@+id/marcador_id"/>
       <TextView
           android:textSize="18dp"
           android:textStyle="bold"
           android:textAlignment="center"
           android:layout_width="175dp"
           android:layout_height="35dp"
           android:text="Colombia VS Mexico"
           android:id="@+id/partido_vs_id"/>
       <TextView
           android:textSize="14dp"
           android:textStyle="italic"
           android:textAlignment="center"
           android:layout_width="175dp"
           android:layout_height="25dp"
           android:text="Hoy 2pm, Estadio Maracana"
           android:id="@+id/estadio_id"/>


   </LinearLayout>


    <ImageView
        android:id="@+id/img_bandera_2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@mipmap/ic_launcher_round" />


</LinearLayout>